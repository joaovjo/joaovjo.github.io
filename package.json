{
	"name": "joaovjo-site",
	"version": "1.0.0",
	"module": "src/server.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --hot src/server.ts",
		"start": "NODE_ENV=production bun src/server.ts",
		"build": "bun run build:static",
		"build:static": "bun build src/pages/index.html --outdir=dist --minify",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check --write .",
		"typecheck": "bunx tsc --noEmit"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.17",
		"@types/alpinejs": "^3.13.11",
		"@types/bun": "^1.3.3",
		"bun-plugin-tailwind": "^0.1.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@alpinejs/collapse": "^3.15.2",
		"alpinejs": "^3.15.2",
		"tailwindcss": "^4.1.17"
	}
}
